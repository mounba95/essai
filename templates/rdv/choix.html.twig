{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Rendez-vous</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/accueil">Accueil</a></li>
                        <li class="breadcrumb-item active">Rendez-vous</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <!--suppress ALL -->
    <section class="content">
        <div class="card card-default">
            <div class="card-header">
                 <div class="callout callout-info">
                    <h5><i class="fas fa-info"></i> Note:</h5>
                    Cet formulaire vous permet de cr√©e un rendez-vous professionnlle ou personnel.
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-12 col-sm-10">
                            <div class="form-group">
                                <label>Type de rendez-vous <span style="color: red;">*</span> :</label>
                                <div class="select2-purple">
                                    {{ form_widget(form.typeRdv, {'attr': {'class':'form-control','placeholder':'Saisir le type de visite', 'required':true} }) }}
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
                        <div class="float-right">
                            <button type="submit" class="btn btn-primary ">Suivant</button>
                        </div>
                            <a href="{{ path('liste_rdv') }}">
                            <button type="button" class="btn btn-danger ">Liste des rendez-vous</button>
                            </a>
               
                {{ form_end(form) }}
            </div>
        </div>
         
    </section>
  
{% endblock %}